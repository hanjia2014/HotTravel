<div class="col-md-6 col-lg-4">
    <article class="card accordion-card">
        <header>
            <h3 class="section-title">@Model.Header</h3>
            <p>@Model.Description</p>
        </header>
        <div class="accordion-panel">
            <div class="panel-group" id="accordion-1" role="tablist" aria-multiselectable="true">

                <!-- Guide Panel -->
                <div class="panel panel-default" style="background-image: url('@Model.Image1Url');">
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <div class="read-more">Details <i class="fa fa-arrow-right"></i></div>
                            <a href="@Model.Item1LinkedPage"><div class="spacer"></div></a>
                        </div>
                    </div>
                    <a data-toggle="collapse" data-parent="#accordion-1" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <div class="panel-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <h4 class="panel-title">@Model.Item1Title</h4>
                            <ul class="hierarchy">
                                <li>@Model.Item1Location</li>
                            </ul>
                        </div>
                    </a>
                </div>

                <!-- Guide Panel -->
                <div class="panel panel-default" style="background-image: url('@Model.Image2Url');">
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <div class="read-more">Details <i class="fa fa-arrow-right"></i></div>
                            <a href="@Model.Item2LinkedPage"><div class="spacer"></div></a>
                        </div>
                    </div>
                    <a data-toggle="collapse" data-parent="#accordion-1" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <div class="panel-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <h4 class="panel-title">@Model.Item2Title</h4>
                            <ul class="hierarchy">
                                <li>@Model.Item2Location</li>
                            </ul>
                        </div>
                    </a>
                </div>

                <!-- Guide Panel -->
                <div class="panel panel-default" style="background-image: url('@Model.Image3Url');">
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                            <div class="read-more">Details <i class="fa fa-arrow-right"></i></div>
                            <a href="@Model.Item3LinkedPage"><div class="spacer"></div></a>
                        </div>
                    </div>
                    <a data-toggle="collapse" data-parent="#accordion-1" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <div class="panel-icon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <h4 class="panel-title">@Model.Item3Title</h4>
                            <ul class="hierarchy">
                                <li>@Model.Item3Location</li>
                            </ul>
                        </div>
                    </a>
                </div>


            </div>
        </div>
        <footer><a href="@Model.LinkedPage">Find More &nbsp; <i class="fa fa-arrow-right"></i></a></footer>
    </article> <!-- /.accordion-card -->
</div>