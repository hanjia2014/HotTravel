@using Orchard.ImageGallery.Helpers
@using System.Web.Mvc.Html
@{ Style.Require("ImageGallery"); }
<script src="https://code.jquery.com/jquery-1.12.4.min.js" integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ=" crossorigin="anonymous"></script>
@model Orchard.ImageGallery.ViewModels.ImageGalleryViewModel

@using (Script.Head()) {

<script type="text/javascript">   
    $(document).ready(function () {
        @Html.ImageGalleryScript("#slideshow", Model.ImageGalleryPlugin) 
    });
</script>
    
}

<div id="slideshow">
    <ul>
        @foreach (var image in Model.Images) {
        <li>           
            @Html.ImageWithThumbnailSize(image)    
        </li>       
        }                     
    </ul>     
</div>



